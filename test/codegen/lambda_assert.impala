fn range(a: i32, b: i32, body: fn(i32) -> ()) -> () {
    if a < b {
        body(a);
        range(a + 1, b, body, return)
    }
}

fn init_zero(mut arr: &[f32], width: i32, height: i32) -> () {
    for i in range(0, (width * height)) {
        arr(i) = 0f;
    }
}

