struct Thing {
    count: i32
}

fn is_empty(thing: &Thing) -> bool {
    thing.count == 0
}

fn call_me(body: fn() -> ()) -> () {
    body();
}

fn test(mut i: &i32, body: fn() -> ()) -> () @{
    call_me(|| {
        @body();
        *i = 42;
    });
}

extern fn cleanup_bug(i: &i32) -> () @{
    for test(i) {
        let mut thing : Thing;

        // Only breaks if it is a 'while' loop
        while !is_empty(&thing) {
        }
    }
}

fn main() -> bool {
    true
}
